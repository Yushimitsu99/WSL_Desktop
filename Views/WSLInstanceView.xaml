<UserControl x:Class="WSL_Desktop.Views.WSLInstanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WSL_Desktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" CornerRadius="20" Margin="10">
            <Border.Background>
                <ImageBrush ImageSource="pack://application:,,,/Assets/wslmanagerbg.png" Stretch="UniformToFill"/>
            </Border.Background>
            <TextBlock Text="Active WSL" FontSize="30" Margin="30 10" Foreground="#ffffff"/>
        </Border>
        <Border Grid.Row="1" CornerRadius="20" Margin="10">
            <Border.Background>
                <ImageBrush ImageSource="pack://application:,,,/Assets/wslmanagerbg.png" Stretch="UniformToFill"/>
            </Border.Background>
        </Border>
    </Grid>
</UserControl>
